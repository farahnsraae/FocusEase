<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ✅ Input Nama Alarm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alarm Name"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editAlarmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Wake up, Meeting, Exercise"
            android:textSize="16sp"
            android:textColor="#000000"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="20dp"
            android:maxLines="1"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Repeat Mode Options -->
        <RadioGroup
            android:id="@+id/radioGroupRepeatMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioOnce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Once (Next occurrence)"
                android:textSize="16sp"
                android:textColor="#000000"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- ✅ Pilih Tanggal Spesifik -->
            <RadioButton
                android:id="@+id/radioSpecificDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specific Date"
                android:textSize="16sp"
                android:textColor="#000000"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <RadioButton
                android:id="@+id/radioDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textSize="16sp"
                android:textColor="#000000"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <RadioButton
                android:id="@+id/radioWeekdays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekdays (Mon - Fri)"
                android:textSize="16sp"
                android:textColor="#000000"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <RadioButton
                android:id="@+id/radioWeekends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekends (Sat - Sun)"
                android:textSize="16sp"
                android:textColor="#000000"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <RadioButton
                android:id="@+id/radioCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom"
                android:textSize="16sp"
                android:textColor="#000000"
                android:minHeight="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </RadioGroup>

        <!-- ✅ Date Picker Button untuk Specific Date -->
        <LinearLayout
            android:id="@+id/specificDateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Date"
                android:textColor="#FFFFFF"
                android:backgroundTint="#7B68EE"
                android:padding="12dp" />

            <TextView
                android:id="@+id/txtSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No date selected"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Custom Days Selection dengan Horizontal Scroll -->
        <LinearLayout
            android:id="@+id/customDaysContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Days"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkSun"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Sun"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="8dp" />

                    <CheckBox
                        android:id="@+id/checkMon"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="8dp" />

                    <CheckBox
                        android:id="@+id/checkTue"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Tue"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="8dp" />

                    <CheckBox
                        android:id="@+id/checkWed"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Wed"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="8dp" />

                    <CheckBox
                        android:id="@+id/checkThu"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="8dp" />

                    <CheckBox
                        android:id="@+id/checkFri"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Fri"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="8dp" />

                    <CheckBox
                        android:id="@+id/checkSat"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:padding="8dp" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="CANCEL"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:minWidth="88dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="OK"
                android:textSize="14sp"
                android:textColor="#7B68EE"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:minWidth="88dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>