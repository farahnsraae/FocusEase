<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:padding="8dp"
            android:background="@drawable/circle_white_bg"
            android:contentDescription="Back" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Notification Button -->
        <ImageView
            android:id="@+id/btnNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notification"
            android:padding="8dp"
            android:background="@drawable/circle_white_bg"
            android:contentDescription="Notification" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:layout_below="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Album Art Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:backgroundTint="#FFF5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- Album Art Image -->
                    <ImageView
                        android:id="@+id/ivAlbumArt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/morning_music_cover"
                        android:scaleType="fitCenter"
                        android:contentDescription="Album Art" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Playlist Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_playlist"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvPlaylistTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Morning Playlist"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/btnFavorite"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_heart"
                    android:contentDescription="Favorite" />
            </LinearLayout>

            <!-- Music Progress Bar -->
            <SeekBar
                android:id="@+id/seekBarMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:progressTint="#E57373"
                android:thumbTint="#E57373" />

            <!-- Music Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Previous Button -->
                <ImageView
                    android:id="@+id/btnPrevious"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_previous"
                    android:padding="8dp"
                    android:contentDescription="Previous" />

                <!-- Rewind 10s Button -->
                <ImageView
                    android:id="@+id/btnRewind"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_rewind_10"
                    android:padding="8dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Rewind 10 seconds" />

                <!-- Play/Pause Button -->
                <ImageView
                    android:id="@+id/btnPlayPause"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/circle_blue_bg"
                    android:padding="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Play" />

                <!-- Forward 10s Button -->
                <ImageView
                    android:id="@+id/btnForward"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_forward_10"
                    android:padding="8dp"
                    android:contentDescription="Forward 10 seconds" />

                <!-- Next Button -->
                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_next"
                    android:padding="8dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Next" />
            </LinearLayout>

            <!-- Mood Playlists -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Mood"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Studying Mood -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStudyingMood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFF9E6"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/studying_mood_cover"
                            android:scaleType="centerCrop"
                            android:contentDescription="Studying Mood" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Studying Mood"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_play_small"
                                android:contentDescription="Play" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Day Mood -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDayMood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFF5E6"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/day_mood_cover"
                            android:scaleType="centerCrop"
                            android:contentDescription="Day Mood" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Day Mood"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_play_small"
                                android:contentDescription="Play" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:padding="16dp"
        android:layout_margin="24dp"
        android:gravity="center"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navMusic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_music_active"
                android:contentDescription="Music" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navClock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_clock"
                android:contentDescription="Clock" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>